name: Deploy Streamlit App

on:
  push:
    branches:
      - pbs-folder

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v3
        with:
          python-version: '3.9'

      - name: Install dependencies
        run: |
          pip install -r pbs-folder/requirements.txt

      - name: Run Streamlit app
        run: |
          streamlit run pbs-folder/App.py


