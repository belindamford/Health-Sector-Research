name: Deploy Streamlit App

on:
  push:
    branches:
      - PBS-Folder  # Keep 'main' here unless your branch is named differently.

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v3
        with:
          python-version: 3.9

      - name: Install dependencies
        run: |
          pip install -r PBS-folder/requirements.txt  # Update folder path.

      - name: Run Streamlit app
        run: |
          streamlit run PBS-folder/App.py  # Update folder path.

